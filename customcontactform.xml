	<description>PLG_CONTENT_CUSTOMCONTACTFORM_DESC</description>
	<license>GNU/GPL v2 or later</license>
	<name>plg_content_customcontactform</name>
	<version>1.0</version>

	<files>
		<filename plugin="customcontactform">customcontactform.php</filename>
		<folder>elements</folder>
		<folder>forms</folder>
		<folder>language</folder>
	</files>

	<media folder="media" destination="plg_customcontactform">
		<folder>js</folder>
	</media>

	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/plugins/content/customcontactform/elements">
				<field name="contacts"
				       type="contacts"
				       multiple="multiple"
				       default=""
				       label="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_CONTACTS_LABEL"
				       description="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_CONTACTS_DESC" />
			</fieldset>
		</fields>
	</config>

</extension>