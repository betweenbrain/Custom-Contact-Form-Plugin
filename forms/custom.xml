<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields
			name="customfields"
			addfieldpath="/plugins/content/customcontactform/elements">
		<fieldset
				name="custom">
			<field
					name="recipients"
					type="recipients"
					id="recipients"
					required="true"
					labelclass="recipients"
					label="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_RECIPIENT_LABEL"
					description="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_RECIPIENT_DESC" />
			<field
					name="telephone"
					id="telephone"
					type="tel"
					label="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_TELEPHONE_LABEL"
					description="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_TELEPHONE_DESC" />
			<field
					name="company"
					id="company"
					type="text"
					required="true"
					label="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_COMPANY_LABEL"
					description="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_COMPANY_DESC" />
			<field
					name="address1"
					id="address1"
					type="text"
					required="true"
					label="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_ADDRESS1_LABEL"
					description="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_ADDRESS1_DESC" />
			<field
					name="address2"
					id="address2"
					type="text"
					label="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_ADDRESS2_LABEL"
					description="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_ADDRESS2_DESC" />
			<field
					name="city"
					id="city"
					type="text"
					required="true"
					label="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_CITY_LABEL"
					description="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_CITY_DESC" />
			<field
					name="country"
					id="country"
					type="country"
					required="true"
					label="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_COUNTRY_LABEL"
					description="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_COUNTRY_DESC" />
			<field
					name="state"
					id="state"
					type="list"
					default=""
					label="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_STATE_LABEL"
					description="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_STATE_DESC">
				<option value="">State</option>
				<option value="Other">Other</option>
			</field>

			<field
					name="zip"
					id="zip"
					type="text"
					label="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_ZIP_LABEL"
					description="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_ZIP_DESC" />
		</fieldset>
		<fieldset
				name="other">
			<field
					name="brand"
					id="brand"
					type="list"
					default=""
					labelclass="recipients"
					label="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_BRAND_LABEL"
					description="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_BRAND_DESC">

				<option value="">Please select</option>
				<option value="KAYE Validation and Environmental Monitoring">KAYE Validation and Environmental Monitoring</option>
				<option value="Protimeter">Protimeter Moisture Sensors</option>
				<option value="Thermometrics">Thermometrics Temperature Sensors</option>
				<option value="Nova Sensor">Nova Sensor MEMS Pressure Sensor</option>
				<option value="Telaire">Telaire CO2 Transmitrters and Modules</option>
			</field>
			<field
					name="solutions"
					id="solutions"
					type="list"
					default=""
					labelclass="recipients"
					label="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_SOLUTIONS_LABEL"
					description="PLG_CONTENT_CUSTOMCONTACTFORM_FIELD_SOLUTIONS_DESC">

				<option value="">Please select</option>
				<option value="CO2 Transmitters and Modules">CO2 Transmitters and Modules</option>
				<option value="MEMS Pressure Sensors">MEMS Pressure Sensors</option>
				<option value="Moisture Meters">Moisture Meters</option>
				<option value="Temperature Sensors">Temperature Sensors</option>
				<option value="Thermal Validation and Environmental Monitoring">Thermal Validation and Environmental Monitoring</option>
				<option value="Services and all other inquiries">Services and all other inquiries</option>
			</field>
		</fieldset>
	</fields>
</form>
